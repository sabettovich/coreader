# Coreader environment example
# Скопируйте этот файл как .env и заполните значения.

# Online providers
# Ключ OpenAI. Если не задан, генерация ответов будет отключена (работает только поиск цитат).
OPENAI_API_KEY=""
# Ключ Zotero Web API. Нужен для поиска и метаданных книги.
ZOTERO_API_KEY=""
# Укажите один из идентификаторов: для личной библиотеки (USER) или групповой (GROUP)
ZOTERO_USER_ID=""    # например: 11756640
ZOTERO_GROUP_ID=""   # например: 1234567

# Local paths
# Абсолютный путь к локальному Obsidian vault (без кавычек можно, но лучше оставить)
OBSIDIAN_VAULT_PATH="/path/to/ObsidianVault"

# Modes
# true — отключает вызовы OpenAI/Zotero (оффлайн-режим)
OFFLINE=false
